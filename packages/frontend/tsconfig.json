{
	"compilerOptions": {
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "./build",
		"baseUrl": "./src",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"allowJs": true,
		"checkJs": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	},
	"include": ["src"],
	"compileOnSave": true
}
