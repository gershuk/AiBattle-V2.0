{
	"compilerOptions": {
		"outDir": "./build",
		"baseUrl": "./src",
		"noImplicitAny": true,
		"module": "es6",
		"target": "ES2015",
		"allowJs": true,
		"checkJs": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
	},
	"include": ["src"],
	"compileOnSave": true
}
